  local f=$1
  local spwd=$(echo $PATHWAYROOTDIR|$SED -e 's/\//\\\//g')
  $SED -i \
    -e 's/<link.*curriculum.css.*>/\0\n<link rel="stylesheet" href="'$spwd'lib\/narrative.css" \/>/' \
    $f
}

